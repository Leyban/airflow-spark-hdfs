CREATE TABLE IF NOT EXISTS wagers.simpleplay_by_id (
    bet_id_range BIGINT,
    bet_id BIGINT,
    bet_time TIMESTAMP,
    username TEXT,
    host_id BIGINT,
    detail TEXT,
    game_id TEXT,
    round BIGINT,
    "set" BIGINT,
    bet_amount FLOAT,
    rolling FLOAT,
    result_amount FLOAT,
    payout_time TIMESTAMP,
    game_result TEXT,
    balance FLOAT,
    game_type TEXT,
    bet_type INT,
    bet_source BIGINT,
    transaction_id BIGINT,
    state TEXT,
    create_at TIMESTAMP,
    update_at TIMESTAMP,
    PRIMARY KEY (bet_id_range, bet_id)
);

CREATE TABLE IF NOT EXISTS wagers.simpleplay_by_member (
    username TEXT,
    bet_time TIMESTAMP,
    bet_id BIGINT,
    host_id BIGINT,
    detail TEXT,
    game_id TEXT,
    round BIGINT,
    "set" BIGINT,
    bet_amount FLOAT,
    rolling FLOAT,
    result_amount FLOAT,
    balance FLOAT,
    payout_time TIMESTAMP,
    game_result TEXT,
    game_type TEXT,
    bet_type INT,
    bet_source BIGINT,
    transaction_id BIGINT,
    state TEXT,
    create_at TIMESTAMP,
    update_at TIMESTAMP,
    PRIMARY KEY (username, bet_time, bet_id)
);

CREATE TABLE IF NOT EXISTS wagers.simpleplay_by_date (
    year_month INT,
    bet_time TIMESTAMP,
    bet_id BIGINT,
    username TEXT,
    host_id BIGINT,
    detail TEXT,
    game_id TEXT,
    round BIGINT,
    "set" BIGINT,
    bet_amount FLOAT,
    rolling FLOAT,
    result_amount FLOAT,
    balance FLOAT,
    payout_time TIMESTAMP,
    game_result TEXT,
    game_type TEXT,
    bet_type INT,
    bet_source BIGINT,
    transaction_id BIGINT,
    state TEXT,
    create_at TIMESTAMP,
    update_at TIMESTAMP,
    PRIMARY KEY (year_month, bet_time, bet_id)
);

